<Data_Content>:
    orientation: 'vertical'
    spacing: 10
    padding: [0,5,0,5]

    TextInput:
        id: text1
        hint_text: 'initial value'
        multiline: False
        on_text_validate: text2.focus = True
        
    TextInput:
        id: text2
        hint_text: 'profit margin'
        multiline: False
        on_text_validate: text3.focus = True

    TextInput:
        id: text3
        hint_text: 'end margin'
        multiline: False
        on_text_validate: text4.focus = True

    TextInput:
        id: text4
        hint_text: 'turn over'
        multiline: False
        on_text_validate: app.sm.hack(root)

    BoxLayout:
        orientation: 'horizontal'
        size_hint_x: .5
        pos_hint: {'right':1}
        spacing: 10
        Button:
            text: 'abort'
            on_release: app.sm.abort(root)
            
        Button:
            text: 'hack'
            on_release: app.sm.hack(root)
            

